<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.2/css/bulma.min.css">
<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>


<%= form_for(@character) do |f| %>

<div class="field">
<label class="label"><%= f.label :name %></label>
<%= f.text_field :name %>
</div>


<div class="select is-multiple">
<%= f.label :gender %>
<%= f.select(:gender, ["Male", "Female", "Other"]) %>

</div>

<div class="select is-multiple">
<%= f.label :race %>
<%= f.select(:race, ["Elf", "Human", "Half Elf", "Gnome", "Dwarf", "Dragonborn", "Halfling", "Tiefling", "Aarakocra", "Genasi", "Goliath", "Aasimar", "Orc", "Half Orc"]) %>

</div>

<div class="select is-multiple">
<%= f.label :profession %>
<%= f.select(:profession, ["Bard", "Barbarian", "Cleric", "Druid", "Fighter", "Monk", "Paladin", "Ranger", "Rogue", "Sorceror", "Warlock", "Wizard","Blood Hunter"]) %>
</div>

<div class="field is-grouped">
<div class="button">
<%= f.submit %>
</div>
</div>


<% end %>



