<h1><%= @character.name %></h1>

<p> created by <%= @character.user.username %> </p>


<h2> Race </h2>
<%= @character.race %>

<h2> Profession</h2>
<%= @character.profession %>

<h2> Gender </h2>
<%= @character.gender %>


<p> </p>
<br>

<% if @character.user == current_user %>
<%= link_to 'Edit this character', edit_character_path, class: "button button2" %>
<% end %>



<p></p>
<br>



<%= link_to 'Add Comment', new_character_comment_path(@character) %>

<h2><%= @character.comments.count %> Comments </h2>
<% @character.comments %>

<p></p>

 <% @character.comments.each do |c| %>

	<% if c.content == 0 %>
	<p>There are no comments.</p>
	<% else %>
	<hr>
	<%= c.user.try(:username) %>: <%= c.content %>
	<% end %>

<% end %> 




