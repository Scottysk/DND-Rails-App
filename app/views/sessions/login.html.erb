<h1> Login </h1>

<!--- 
<% if flash[:notice] %> 
<h2> <%= flash[:notice] %></h2>
<% end %> 
--->

<%= form_for @user, url: '/login' do |f| %>
<p>
	<%= f.label :username %>
	<%= f.text_field :username %>


	<%= f.label :password %>
	<%= f.password_field :password %> 

</p>

	<%= f.submit "Login" %>

<% end %>