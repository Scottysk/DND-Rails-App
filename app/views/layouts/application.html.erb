<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.2/css/bulma.min.css">
<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>

<!DOCTYPE html>
<html>
  <head>
    <title>DndRailsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class='clearfix'>


  <% if !logged_in? %>


  <div class="left-nav">
      <%= link_to "Login |", login_path %>
      <%= link_to "Signup |", register_path %>
  </div>

  <div class="left-nav">
      <%= link_to "Login with Google", "/auth/google_oauth2" %>
  </div>

  <% else %>

  <div class="right-nav">
      <%= link_to "Logout", logout_path, method: :delete, :class => "button is-dark" %>
  </div>

<div class="navbar-start">
      
      <%= link_to "Home", root_path, :class => "button is-dark" %>
      <%= link_to "My Profile", user_path(current_user), :class => "button is-primary is-inverted is-outlined" %>
      <%= link_to "Create Character", new_character_path, :class => "button is-dark" %>
      <%= link_to "Characters", characters_path, :class => "button button2" %>
      <%= link_to "Users", users_path, :class => "button is-dark" %>

      | <p>You are currently logged in as <%= current_user.username %></p>

  </div>



  <% end %>

</header>

<div class='content'>
  <%= yield %>
</div>

  </body>
</html>
